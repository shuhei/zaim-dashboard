extends layout

block content
  h1= title
  p Welcome to #{title}
  - if (moneys && moneys.length > 0)
    table
      tr
        th Type
        th Date
        th Category
        th Genre
        th Price
        th Comment
      each money in moneys
        tr(id=money.id, class=money.type)
          td= money.type
          td= money.date
          td= money.category.title
          td= money.genre.title
          td= money.price
          td= money.comment
  - else
    p
      a(href='/auth') Authrorize